rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Documents collection - Main file metadata
    match /documents/{documentId} {
      allow read: if true;  // Allow reading for search functionality
      allow create: if true;  // Allow creating new documents
      allow update: if true;  // Allow updates for processing status
      allow delete: if false; // Security: no deletion
    }
    
    // System collection - App statistics
    match /system/{systemDoc} {
      allow read: if true;   // Public stats
      allow write: if true;  // Allow stats updates
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}