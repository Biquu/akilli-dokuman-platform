rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Documents folder - Main file storage
    match /documents/{fileName} {
      allow read: if true;   // Allow reading/downloading files
      allow create: if true; // Allow uploading files
      allow update: if true; // Allow metadata updates
      allow delete: if false; // Security: no deletion
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}